{{> head}}
<div class="content">
    <h2>Registreren</h2>
    <div class="items">
        <div class="small">
            <form method="POST" action="/registreren">
                <ul class="errors">
                    {{#errors}}
                    <li>{{msg}}</li>
                    {{/errors}}
                </ul>
                <label>Gebruikersnaam</label>
                <input type="text" maxlength="30" name="username" placeholder="gebruikersnaam" required value="{{values.username}}"/>
                <label>Wachtwoord</label>
                <input type="password" maxlength="60" name="password" placeholder="wachtwoord" required/>
                <label>Herhaal Wachtwoord</label>
                <input type="password" maxlength="60" name="confirmpassword" placeholder="herhaal wachtwoord" required/>
                <input type="submit" value="Registeren"/>
            </form>
        </div>
    </div>
</div>

{{> footer}}